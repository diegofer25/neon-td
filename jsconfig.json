{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false,
    "checkJs": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "js/**/*",
    "*.js",
    "*.mjs"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "*.min.js"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "jest",
      "node"
    ]
  }
}
